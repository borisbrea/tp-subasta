<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.RegisterFragment"
    android:orientation="vertical"
    android:gravity="center">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".Fragments.AuctionFragment"
        android:layout_marginTop="60dp" >

        <com.synnapps.carouselview.CarouselView
            android:id="@+id/auction_carousel"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="55dp"
            app:fillColor="#FFF"
            app:pageColor="#00000000"
            app:radius="6dp"
            app:slideInterval="3000"
            app:strokeColor="#FF777777"
            app:strokeWidth="1dp" />

        <TextView
            android:id="@+id/tv_item_title_af"
            android:text="Título de Artículo"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragments.RegisterFragment"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="376dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <Button
                android:id="@+id/button2"
                android:layout_width="172dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:text="1 de 6 >" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_state_af"
                    android:layout_width="fill_parent"
                    android:layout_height="46dp"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Estado"
                    android:textAlignment="center"
                    android:paddingTop="10dp"
                    android:inputType="textPersonName"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btn_ver_detalle_af"
                    android:layout_width="172dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="#00B1B0B0"
                    android:text="Ver detalle"
                    android:textColor="#673AB7" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:text="Descripción"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_description_af"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#E4E3E3"
                    android:hint="Descripcion prueba"
                    android:ems="10"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Dueño"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="109dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Precio Base"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

            <TextView
                    android:id="@+id/tv_duenio_af"
                    android:layout_width="174dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="#E4E3E3"
                    android:ems="10"
                    android:hint="Dueño"
                    android:inputType="textPersonName"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_precio_base_af"
                    android:layout_width="175dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:background="#E4E3E3"
                    android:ems="10"
                    android:hint="$1000"
                    android:inputType="textPersonName"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textSize="20dp" />
            </LinearLayout>

                <EditText
                    android:id="@+id/et_precio_base_af"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Introducir Precio"
                    android:inputType="number" />

            <Button
                android:id="@+id/btn_pujar_af"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#009688"
                android:text="Pujar"
                android:textColor="#E6E4EA" />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
