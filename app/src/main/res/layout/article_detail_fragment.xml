<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ArticleDetailFragment"
    android:orientation="vertical"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".Fragments.ArticleDetailFragment"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_title_adf"
            android:text="Título de Producto"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.synnapps.carouselview.CarouselView
            android:id="@+id/cv_article_images_adv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="15dp"
            app:fillColor="#FFF"
            app:pageColor="#00000000"
            app:radius="6dp"
            app:slideInterval="3000"
            app:strokeColor="#FF777777"
            app:strokeWidth="1dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragments.RegisterFragment"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="-50dp">

        <LinearLayout
            android:layout_width="376dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:text="Descripción"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_description_adf"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#E4E3E3"
                    android:hint="Descripcion prueba"
                    android:ems="10"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_precio_comision_adf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_precio_base_adf"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:text="Precio base: "
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_comision_adf"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:text="Comisión: "
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_botones_adf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="10dp"
                android:visibility="gone">

                <Button
                    android:id="@+id/btn_cancelar_adf"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="#703DFB"
                    android:text="Rechazar"
                    android:layout_marginRight="5dp"
                    android:textColor="#E6E4EA" />

                <Button
                    android:id="@+id/btn_aceptar_adf"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="#703DFB"
                    android:text="Aceptar"
                    android:textColor="#E6E4EA" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_estado_adf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_estado_adf"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="Estado"
                    android:textSize="25dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_datos_adf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_fecha_adf"
                    android:layout_width="174dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Fecha: "
                    android:inputType="textPersonName"
                    android:selectAllOnFocus="true"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_auction_assigned_adf"
                    android:layout_width="174dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Subasta: "
                    android:inputType="textPersonName"
                    android:selectAllOnFocus="true"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_monto_vendido_adf"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:ems="10"
                    android:text="Monto Vendido: "
                    android:inputType="textPersonName"
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/tv_ganancia_adf"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:ems="10"
                    android:text="Ganancia: "
                    android:inputType="textPersonName"
                    android:textSize="15dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
